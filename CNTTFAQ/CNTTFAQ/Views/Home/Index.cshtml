@model List<CNTTFAQ.Models.DANH_MUC>

<!DOCTYPE html>
<html lang="en">
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <title>Chào mừng đến với trang chủ</title>
    <meta charset="UTF-8">
    <!-- Template Main CSS File -->
    <link href="@Url.Content("~/Assets/css/ArshaUserPageCss/style.css")" rel="stylesheet">

</head>
<body>
    <!-- ==============================================
    BANNER
    =============================================== -->
    <section class="slider-area">
        <div class="container-fluid">
            <div class="row">
                <div class="owl-carousel main-slider">
                    <!-- Single slide 1-->
                    <div class="single-slide slide-bg-1" style="background-image:url('@Url.Content("~/Assets/images/backgrounds/transaction-background-6.png")')">
                        <div class="col-md-12">
                            <div class="tabel">
                                <div class="tabel-cell">
                                    <div class="slider-content">
                                        <h3>Freelance Designer</h3>
                                        <h1>CHÀO MÙNG ĐẾN VỚI<br />KHOA CÔNG NGHỆ THÔNG TIN</h1>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div><!-- /.single-slide -->
                    <!-- Single slide 2 -->
                    <div class="single-slide slide-bg-2" style="background-image:url('@Url.Content("~/Assets/images/backgrounds/transaction-background-2.png")')">
                        <div class="col-md-12">
                            <div class="tabel">
                                <div class="tabel-cell">
                                    <div class="slider-content">
                                        <h3>Freelance Developer</h3>
                                        <h1>Digital Design Agency.</h1>
                                        <a href="#" class="btn btn-transparent">Let's Work Together</a>
                                        <a href="#" class="btn btn-white">About Us</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div><!-- /.single-slide -->

                </div><!-- /.main-slider -->
            </div>
        </div>
    </section>

    <!-- ==============================================
    ABOUT US
    =============================================== -->
    <section id="about">
        <div class="container">
            <h2 style="margin-bottom: 0px">Phương Châm</h2>
        </div>
    </section>
    <!-- ==============================================
    FEATURES
    =============================================== -->
    <section id="features">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 wow fadeInLeft" data-wow-duration=".2s" data-wow-delay=".2s">
                    <div class="feature-box">
                        <span class="lnr lnr-rocket"></span>
                        <h4>BẤT CỨ LÚC NÀO</h4>
                        <p>Tiện lợi, hữu ích, đơn giản, dễ sử dụng, dễ tìm kiếm, có thể hỗ trợ giải đáp thắc mắc sinh viên khoa công nghệ thông tin</p>
                    </div>
                </div>
                <div class="col-lg-4 wow fadeInLeft" data-wow-duration=".2s" data-wow-delay=".4s">
                    <div class="feature-box">
                        <span class="lnr lnr-laptop-phone"></span>
                        <h4>XỬ LÝ NHANH CHÓNG</h4>
                        <p>Khi nhận thắc mắc từ sinh viên, đội ngũ khoa công nghệ thông tin của Nhà trường sẽ xử lý và hồi đáp nhanh chóng</p>
                    </div>
                </div>
                <div class="col-lg-4 wow fadeInLeft" data-wow-duration=".2s" data-wow-delay=".6s">
                    <div class="feature-box">
                        <span class="lnr lnr-bubble"></span>
                        <h4>NƠI GIẢI ĐÁP THẮC MẮC</h4>
                        <p>Hỗ trợ sinh viên trả lời những thắc mắc về ngành học và môn học, chính sách và thủ tục tại trường, cải thiện kết quả học tập</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ==============================================
    Frequently Asked Questions Section
    =============================================== -->
    <section id="portfolio" class="faq section-bg">
        <div class="svg-wave">
            <svg xmlns="http://www.w3.org/2000/svg" width="100%" viewBox="0 0 3600 248">
                <path d="M3601,31.227S2736.31,201.97,1661,72.2C547.345-62.2,0,32.227,0,32.227V343H3602Z"></path>
            </svg>
        </div>

        <div class="container" data-aos="fade-up">
            <div class="section-title">
                <h2 style="font-size: 2.5rem; font-family: inherit; color: black">Câu Hỏi Thường Gặp</h2>
            </div>
            @foreach (var list in ViewBag.MaxQuestion)
            {
                <div class="faq-list">
                    <ul>
                        <li data-aos="fade-up" data-aos-delay="100">
                            <i class="bx bx-help-circle icon-help"></i> <a data-bs-toggle="collapse" class="collapse" href="#@list.ID">@list.CAU_HOI1</a>
                            <div id="@list.ID" class="collapse show" data-bs-parent=".faq-list">
                                <p>
                                    @MvcHtmlString.Create(list.MO_TA)
                                </p>
                                <p>
                                    Lượt xem: @list.LUOT_XEM
                                </p>
                            </div>
                        </li>
                    </ul>
                </div>
            }
        </div>
    </section>
    <!-- ==============================================
    CALL TO ACTION
    =============================================== -->
    <section id="call-to-action" style="background-image: url('@Url.Content("~/Assets/images/backgrounds/call-to-action.jpg")')">
        <div class="container">
            <h1 class="wow fadeInDown" data-wow-duration=".2s" data-wow-delay=".4s">ĐIỀU BẠN THƯỜNG HỎI</h1>
            <a style="font-size: 1.5rem">Nếu bạn có câu hỏi muốn được tư vấn. Hãy liên hệ với ban chủ nhiệm khoa để được giáp đáp một các chi tiết</a>
        </div>
    </section>
    <!-- ==============================================
    SERVICES
    =============================================== -->
    <section id="pricing">
        <div class="svg-wave">
            <svg xmlns="http://www.w3.org/2000/svg" width="100%" viewBox="0 0 3600 248">
                <path d="M3601,31.227S2736.31,201.97,1661,72.2C547.345-62.2,0,32.227,0,32.227V343H3602Z"></path>
            </svg>
        </div>
        <div class="container">
            <h2>Chủ Đề</h2>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 wow fadeInLeft" data-wow-duration=".2s" data-wow-delay=".6s">
                        <div class="service">
                            <div class="service-icon">
                                <span class="lnr lnr-layers"></span>
                            </div>
                            <div class="service-content">
                                <h5>@Html.ActionLink(item.DANH_MUC1, "Index", "Questions", new { page = 1, category = @item.ID }, null)</h5>
                                <p>@MvcHtmlString.Create(item.MO_TA)</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="svg-wave bottom">
            <svg xmlns="http://www.w3.org/2000/svg" width="100%" viewBox="0 0 3600 248">
                <path d="M3601,31.227S2736.31,201.97,1661,72.2C547.345-62.2,0,32.227,0,32.227V343H3602Z"></path>
            </svg>
        </div>
    </section>
    <!-- ==============================================
    PRICING
    =============================================== -->
    <!-- ==============================================
    TEAM
    =============================================== -->
    <section id="team" style="padding: 0px">
        <div class="container">
            <h2>Ban Chủ Nhiệm Khoa</h2>
