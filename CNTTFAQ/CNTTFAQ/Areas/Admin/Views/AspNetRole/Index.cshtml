@model IEnumerable<CNTTFAQ.Models.AspNetRole>
<!DOCTYPE html>
<html dir="ltr" lang="en">
@{
    ViewBag.Title = "AspNetRole Index Page";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <title>Quản lý quyền </title>
</head>

<body>
    <!-- ============================================================== -->
    <!-- Main wrapper - style you can find in pages.scss -->
    <!-- ============================================================== -->
    <div id="main-wrapper" data-theme="light" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full" data-sidebar-position="fixed" data-header-position="fixed" data-boxed-layout="full">
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
        <div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-7 align-self-center">
                        <h4 class="page-title text-truncate text-dark font-weight-medium mb-1">Quyền tài khoản</h4>
                        <div class="d-flex align-items-center">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb m-0 p-0">
                                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "AdminHome")" class="text-muted">Trang chủ</a></li>
                                    <li class="breadcrumb-item text-muted active" aria-current="page">Danh sách các danh mục</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                    <div class="col-5 align-self-center">
                        <div class="customize-input float-right">
                            <button onclick="location.href='@Url.Action("Create", "AspNetRole")'" style="color: green" class="custom-select custom-select-set form-control bg-white border-0 custom-shadow custom-radius">
                                <i class="fas fa-plus"> Tạo quyền mới</i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <!-- basic table -->
                @foreach (var roleName in Model)
                {
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Bảng quyền @roleName.Name</h4>
                                    <div class="table-responsive">
                                        <div class="table-responsive">
                                            <a href="@Url.Action("Create", "AspNetRoleUser", new { RoleId = roleName.Id })" class="btn btn-success btn-circle">
                                                <i class="fa fa-plus"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", new { id = roleName.Id })" class="btn btn-warning btn-circle">
                                                <i class="fa fa-eye-dropper"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", new { id = roleName.Id })" class="btn btn-danger btn-circle">
                                                <i class="fa fa-times"></i>
                                            </a>
                                        </div>
                                        <table id="zero_config" class="table table-striped table-bordered no-wrap">
                                            <thead>
                                                <tr>
                                                    <th> Tài khoản</th>
                                                    <th> Tùy chỉnh</th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                @foreach (var role in Model)
                                                {
                                                    if (role == roleName)
                                                    {
                                                        foreach (var user in role.AspNetUsers)
                                                        {
                                                            <tr>
                                                                <td>@user.UserName</td>
                                                                <td>
                                                                    <a href="@Url.Action("Delete", "AspNetRoleUser", new { RoleId = role.Id, UserId = user.Id })" class="btn btn-danger btn-circle">
                                                                        <i class="fa fa-times"></i>
                                                                    </a>
                                                                </td>
                                                            </tr>
                                                        }
                                                    }
                                                }
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th> Tài khoản</th>
                                                    <th> Tùy chỉnh người dùng</th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
            </div>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- footer -->
            <!-- ============================================================== -->
            <footer class="footer text-center text-muted">
                @DateTime.Now.Year - All Rights Reserved by Adminmart. Designed and Developed by <a>SEPK24T-Team11</a>.
            </footer>
            <!-- ============================================================== -->
            <!-- End footer -->
            <!-- ============================================================== -->
        </div>
        <!-- ============================================================== -->
        <!-- End Page wrapper  -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Wrapper -->
    <!-- ============================================================== -->
    <!-- End Wrapper -->
    <!-- ============================================================== -->
</body>
</html>

