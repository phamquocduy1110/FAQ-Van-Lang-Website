@model List<CNTTFAQ.Models.CAU_TRA_LOI>
<!DOCTYPE html>
<html dir="ltr" lang="en">
@{
    ViewBag.Title = "Comment Index Page";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <title>Câu trả lời</title>
    <style>
        .customize-input button:hover {
            background: green !important;
            color: #ffffff !important;
        }
    </style>
</head>

<body>
    <!-- ============================================================== -->
    <!-- Main wrapper - style you can find in pages.scss -->
    <!-- ============================================================== -->
    <div id="main-wrapper" data-theme="light" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full" data-sidebar-position="fixed" data-header-position="fixed" data-boxed-layout="full">
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
        <div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-7 align-self-center">
                        <h4 class="page-title text-truncate text-dark font-weight-medium mb-1">Danh sách câu trả lời</h4>
                        <div class="d-flex align-items-center">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb m-0 p-0">
                                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "AdminHome")" class="text-muted">DashBoard</a></li>
                                    <li class="breadcrumb-item text-muted active" aria-current="page">Danh sách các câu trả lời</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                    <div class="col-5 align-self-center">
                        <div class="customize-input float-right">
                            <button onclick="location.href='@Url.Action("Create", "Comment")'" style="color: green" class="custom-select custom-select-set form-control bg-white border-0 custom-shadow custom-radius">
                                <i><b>+ Thêm câu trả lời</b></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <!-- basic table -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Xem danh sách câu trả lời</h4>
                                <div class="table-responsive">
                                    <table id="zero_config" class="table table-striped table-bordered no-wrap">
                                        <thead>
                                            <tr>
                                                <th>STT</th>
                                                <th>Tùy chỉnh</th>
                                                <th>Câu hỏi</th>
                                                <th>Ngày trả lời</th>
                                                <th>Người trả lời</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (int i = 0; i < Model.Count(); i++)
                                            {
                                                var item = Model[i];
                                                <tr>
                                                    <td>
                                                        @(i + 1)
                                                    </td>
                                                    <td>
                                                        <a title="Xem chi tiết" href="@Url.Action("Details", new { id = item.ID })" class="btn btn-primary btn-circle">
                                                            <i class="fa fa-list"></i>
                                                        </a>
                                                        <a title="Chỉnh sửa" href="@Url.Action("Edit", new { id = item.ID })" class="btn btn-warning btn-circle">
                                                            <i class="fa fa-eye-dropper"></i>
                                                        </a>
                                                        <a title="Xóa" href="@Url.Action("Delete", new { id = item.ID })" class="btn btn-danger btn-circle">
                                                            <i class="fa fa-times"></i>
                                                        </a>
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CAU_HOI.CAU_HOI1)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.NGAY_TRA_LOI)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.AspNetUser.Email)
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>STT</th>
                                                <th>Tùy chỉnh</th>
                                                <th>Câu hỏi</th>
                                                <th>Ngày trả lời</th>
                                                <th>Người trả lời</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
            </div>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- footer -->
            <!-- ============================================================== -->
            <footer class="footer text-center text-muted">
                @DateTime.Now.Year - All Rights Reserved by Adminmart. Designed and Developed by <a>SEPK24T-Team11</a>.
            </footer>
            <!-- ============================================================== -->
            <!-- End footer -->
            <!-- ============================================================== -->
        </div>
        <!-- ============================================================== -->
        <!-- End Page wrapper  -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Wrapper -->
    <!-- ============================================================== -->
    <!-- End Wrapper -->
    <!-- ============================================================== -->
</body>
</html>